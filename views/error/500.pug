doctype html
html
    head
        base(href!=uriRoot)
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui")
        title=title
        meta(content!=description name="description")
        meta(content!=author name="author")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        link(rel="shortcut icon" href="images/favicon.ico")
        link(href="css/bootstrap.min.css" rel="stylesheet" type="text/css")
        link(href="css/icons.css" rel="stylesheet" type="text/css")
        link(href="css/style.css" rel="stylesheet" type="text/css")
    body.fixed-left
        // Begin page
        .accountbg
        .wrapper-page
            .card
                .card-block
                    .ex-page-content.text-center
                        h1 500
                        h3 Internal Server Error
                        br
                        a.btn.btn-danger.mb-5.waves-effect.waves-light(href="/") Back
        .card
            if (environment == 'development')
                h4= message
            if (environment == 'development')
                h6= error.status
            if (environment == 'development')
                pre #{error.stack}
        // jQuery
        script(src="assets/js/jquery.min.js")
        script(src="assets/js/popper.min.js")
        script(src="assets/js/bootstrap.min.js")
        script(src="assets/js/modernizr.min.js")
        script(src="assets/js/detect.js")
        script(src="assets/js/fastclick.js")
        script(src="assets/js/jquery.slimscroll.js")
        script(src="assets/js/jquery.blockUI.js")
        script(src="assets/js/waves.js")
        script(src="assets/js/jquery.nicescroll.js")
        script(src="assets/js/jquery.scrollTo.min.js")
        // App js
        script(src="assets/js/app.js")
