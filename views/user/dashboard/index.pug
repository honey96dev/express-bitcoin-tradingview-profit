extends ../layout

block mainContent
    .row
        .col-md-6.col-xl-3
            .mini-stat.clearfix.bg-white
                .row.align-items-center
                    .col-4
                        img.rounded-curcle(src="images/coins/btc.png" alt="")
                    .col-4
                        h4.counter.text-dark.m-0.pb-1 $ 11852
                        i.mdi.mdi-arrow-down.text-danger
                        small.text-danger -5.45%
                    .col-4
                        a.btn.btn-success.btn-sm.float-right(href="#") Buy
                    .col-12
                        #sparkline0
        .col-md-6.col-xl-3
            .mini-stat.clearfix.bg-white
                .row.align-items-center
                    .col-4
                        img.rounded-curcle(src="images/coins/eth.png" alt="")
                    .col-4
                        h4.counter.text-dark.m-0.pb-1 $ 956
                        i.mdi.mdi-arrow-up.text-success
                        small.text-success +1.45%
                    .col-4
                        a.btn.btn-danger.btn-sm.float-right(href="#") Sell
                    .col-12
                        #sparkline1
        .col-md-6.col-xl-3.align-items-center
            .mini-stat.clearfix.bg-white
                .row.align-items-center
