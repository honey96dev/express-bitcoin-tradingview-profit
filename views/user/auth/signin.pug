doctype html
html
    head
        base(href!=uriRoot)
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui")
        title=title
        meta(content!=description name="description")
        meta(content!=author name="author")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        link(rel="shortcut icon" href="images/favicon.ico")
        link(href="css/bootstrap.min.css" rel="stylesheet" type="text/css")
        link(href="css/icons.css" rel="stylesheet" type="text/css")
        link(href="css/style.css" rel="stylesheet" type="text/css")
    body.fixed-left
        // Begin page
        .accountbg
        .wrapper-page
            .card
                .card-body
                    h3.text-center.mt-0.m-b-15
                        a.logo.logo-admin(href!='/')
                            img(src="images/logo.png" height="24" alt="logo")
                    .p-3
                        input#baseUrl(type="hidden" value!=baseUrl)
                        form#signInForm.form-horizontal.m-t-20(action!=baseUrl + "auth/signin")
                            .form-group.row
                                .col-12
                                    input#username.form-control(type="text" name="username" placeholder="Username")
                                    //input#email.form-control(type="text" name="email" placeholder="Username")
                            .form-group.row
                                .col-12
                                    input#password.form-control(type="password" name="password" placeholder="Password")
                            .form-group.row
                                .col-12
                                    .custom-control.custom-checkbox
                                        input#rememberMe.custom-control-input(type="checkbox" name="rememberMe")
                                        label.custom-control-label(for="rememberMe") Remember me
                            .form-group.text-center.row.m-t-20
                                .col-12
                                    button#signIn.btn.btn-danger.btn-block.waves-effect.waves-light Sign In
                            .form-group.m-t-10.mb-0.row
                                .col-sm-7.m-t-20
                                    //a.text-muted(href!="pages-recoverpw.html")
                                    //    i.mdi.mdi-lock
                                    //    small Forgot your password ?
                                .col-sm-5.m-t-20
                                    a.text-muted(href!=baseUrl + 'auth/signup')
                                        i.mdi.mdi-account-circle
                                        small Create an account ?
        // jQuery
        script(src="js/jquery.min.js")
        script(src="js/popper.min.js")
        script(src="js/bootstrap.min.js")
        script(src="js/modernizr.min.js")
        script(src="js/detect.js")
        script(src="js/fastclick.js")
        script(src="js/jquery.slimscroll.js")
        script(src="js/jquery.blockUI.js")
        script(src="js/waves.js")
        script(src="js/jquery.nicescroll.js")
        script(src="js/jquery.scrollTo.min.js")
        script(src=assetsVendorsRoot + "jquery-validation/jquery.validate.min.js")
        script(src=assetsVendorsRoot + "jquery-form/jquery.form.min.js")
        // App js
        script(src="js/app.js")
        script(src="site/auth/signIn.js")
